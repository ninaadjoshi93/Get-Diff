<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="repositoryName"
            type="com.ninaad.gitdiff.models.GDGitRepository"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.activities.GDPullDifferenceActivity">

        <ProgressBar
            android:id="@+id/loading_diff_pb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:indeterminateTint="@color/colorPrimaryDark"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout android:id="@+id/git_diff_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView android:id="@+id/repository_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{`Repository : ` + repositoryName.gitRepositoryName + `\n` + `Owner : ` + repositoryName.gitRepositoryOwner}"
                android:textSize="@dimen/V18sp"
                android:textColor="@color/light_gray"
                android:padding="@dimen/V10dip"
                android:background="@color/git_theme_dark_gray"
                android:gravity="center"
                />

            <TextView android:id="@+id/before_pull_request_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/before_pull_request"
                android:textSize="@dimen/V16sp"
                android:textColor="@color/dark_gray"
                android:gravity="center"
                android:background="@color/diff_light_red"/>

            <android.support.v7.widget.RecyclerView android:id="@+id/prev_rv"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:fillViewport="true"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:padding="@dimen/V1dip"
                android:background="@drawable/bordered_view"/>

            <TextView android:id="@+id/after_pull_request_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/after_pull_request"
                android:textSize="@dimen/V16sp"
                android:textColor="@color/dark_gray"
                android:gravity="center"
                android:background="@color/diff_light_green"/>


            <android.support.v7.widget.RecyclerView android:id="@+id/next_rv"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:fillViewport="true"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:padding="@dimen/V1dip"
                android:background="@drawable/bordered_view"/>
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>


</layout>